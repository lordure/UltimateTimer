<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/namemandatory"
        android:id="@+id/choose_name_duration"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="description"
        android:id="@+id/choose_description_duration"
        android:layout_below="@+id/choose_name_duration"/>
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_hours"
        android:layout_below="@+id/choose_description_duration"/>
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_minutes"
        android:layout_below="@+id/choose_description_duration"
        android:layout_toRightOf="@+id/number_hours"/>
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_seconds"
        android:layout_below="@+id/choose_description_duration"
        android:layout_toRightOf="@+id/number_minutes"/>
</RelativeLayout>